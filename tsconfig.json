{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "rootDir": "./",
    "module": "commonjs", 
    "baseUrl": "./src",                 
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@utils/*": ["utils/*"]
    },                               
    "esModuleInterop": true, 
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,              
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}